    "@types/mocha": "2.2.48",
    "@types/node": "14.10.3",
    "@types/sinon": "^10.0.2",
    "aglio": "2.3.0",
    "browserify": "16.1.1",
    "chai": "4.1.2",
    "chai-http": "4.0.0",
    "dotenv": "5.0.0",
