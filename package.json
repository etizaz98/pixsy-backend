    "body-parser": "1.18.2",
    "bunyan": "1.8.12",
    "bunyan-elasticsearch": "1.0.1",
    "cors": "2.8.5",
    "express": "4.16.3",
    "helmet": "3.22.0",
    "joi": "14.3.1",
    "superagent": "4.0.0-beta.5",
    "ts-node-dev": "1.0.0-pre.18",
    "typescript": "4.0.2",
    "@types/browserify": "12.0.33",
    "@types/bunyan": "1.8.4",
    "@types/chai": "4.1.2",
    "@types/chai-http": "3.0.4",
    "@types/cors": "2.8.5",
